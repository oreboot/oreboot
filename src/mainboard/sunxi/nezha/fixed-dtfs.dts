/dts-v1/;

/ {
    #address-cells = <1>;
    #size-cells = <1>;

    flash-info {
        compatible = "ore-flashinfo";
        board-name = "Nezha";
        category = "Sunxi";
        board-url = "https://d1.docs.aw-ol.com/en/d1_dev/";
        areas {
            area@0 {
                description = "Boot Blob and Romstage";
                size = <0x80000>; // 512KiB
                file = "$(TARGET_DIR)/bootblob.bin";
            };
            area@1 {
                description = "Fixed DTFS";
                size = <0x80000>; // 512KiB
                file = "$(TARGET_DIR)/fixed-dtfs.dtb";
            };
            area@2 {
                description = "Payload A";
                size = <0x600000>; // 6MiB
                file = "$(PAYLOAD_A)";
            };
            /*
            area@3 {
                description = "Payload B";
                size = <0x600000>; // 6MiB
                file = "$(PAYLOAD_B)";
            };
            area@4 {
                description = "Payload C";
                size = <0x200000>; // 2MiB
                file = "$(PAYLOAD_C)";
            };
            */
            area@3 {
                description = "Empty Space";
                size = <0x100000>; // 1MiB
            };
        };
    };
};
