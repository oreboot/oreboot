/dts-v1/;

/ {
    #address-cells = <1>;
    #size-cells = <1>;

    flash-info {
        compatible = "ore-flashinfo";
        board-name = "HiFive Unleashed";
        category = "SiFive";
        board-url = "https://www.sifive.com/boards/hifive-unleashed";
        areas {
            area@0 {
                description = "Boot Blob";
                compatible = "ore-bootblob";
                offset = <0x0>;
                size = <0x80000>; // 512KiB
                file = "target/riscv64imac-unknown-none-elf/release/bootblob.bin";
            };
            area@1 {
                description = "Fixed DTFS";
                compatible = "ore-dtfs";
                offset = <0x80000>;
                size = <0x80000>; // 512KiB
                file = "target/riscv64imac-unknown-none-elf/release/fixed-dtfs.dtb";
            };
            area@2 {
                description = "NVRAM A";
                compatible = "ore-nvram";
                half = <0>;
                offset = <0x100000>;
                size = <0x80000>; // 512KiB
            };
            area@3 {
                description = "NVRAM B";
                compatible = "ore-nvram";
                half = <1>;
                offset = <0x180000>;
                size = <0x80000>; // 512KiB
            };
            area@4 {
                description = "RomPayload DTFS A";
                compatible = "ore-rompayload";
                half = <0>;
                offset = <0x200000>;
                size = <0x100000>; // 1MiB
            };
            area@5 {
                description = "RomPayload DTFS B";
                compatible = "ore-rompayload";
                half = <1>;
                offset = <0x300000>;
                size = <0x100000>; // 1MiB
            };
            area@6 {
                description = "RamPayload DTFS A";
                compatible = "ore-rampayload";
                half = <0>;
                offset = <0x400000>;
                size = <0x600000>; // 6MiB
                file = "../../../../payloads/src/external/simple/testtesttest";
            };
            area@7 {
                description = "RamPayload DTFS B";
                compatible = "ore-rampayload";
                half = <1>;
                offset = <0xa00000>;
                size = <0x600000>; // 6MiB
            };
            area@8 {
                description = "Empty Space";
                offset = <0x1000000>;
                size = <0x1000000>; // 16MiB
            };
        };
    };
};
